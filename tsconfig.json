{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "module": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
  },
  "include": [
    "*/*/src/**/*.ts",
    "*/*/src/**/*.d.ts",
    "*/*/__tests__/**/*.spec.ts",
    ".eslintrc.cjs",
    ".prettierrc.cjs",
    "vite.config.ts",
    "vitest.config.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "references": []
}
